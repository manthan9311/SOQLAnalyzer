{
  "manifest_version": 3,
  "name": "SOQL Extractor and Analyzer for Salesforce",
  "short_name": "SOQL Analyzer",
  "version": "1.0.0",
  "description": "Analyze SOQL queries with execution counts from Salesforce debug logs or upload the log file. Helps diagnose 'Too Many SOQLs' errors",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.lightning.force.com/*",
    "https://*.visual.force.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.lightning.force.com/*",
        "https://*.visual.force.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "update_url": "https://clients2.google.com/service/update2/crx"
}
